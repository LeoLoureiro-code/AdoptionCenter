@{
    ViewData["Title"] = "Contact Page";
}
<script type="text/javascript">

    function SendMessage(){
        let messageParagraph = document.createElement('p');
        let messageDiv = document.createElement('div');
        let contactDiv = document.getElementById('contact');

        messageDiv.className = "message-div";
        messageParagraph.className = "message-p"
        messageParagraph.innerHTML = "Email sent successfully";
        messageDiv.appendChild(messageParagraph);
        contactDiv.appendChild(messageDiv);

        setTimeout(() => {
            messageDiv.remove();
        }, "6000");
        
    }

    function ResetContent(){
        let name = document.getElementById("name");
        let email = document.getElementById("email");
        let message = document.getElementById("message");

        if(name.value != "" && email.value != "" && message.value != ""){
        name.value = "";
        email.value = "";
        message.value = "";

        SendMessage()
        }
    }
 </script>

<h1 class="contact-h1">How can we help you today?</h1>
<div class="contact-div" id="contact">
   
    
    <div class="contact-img">
        <img src="./css/Assets/contact-img.png" alt="Cat looking the celing" />
    </div>
    <div class="contact-info">

        <form action="" class="contact-form" id="contact-form">
            <div class="input-div">
                <input type="text" class="contact-input" id="name" name="name" placeholder="Name" required/>
            </div>
            <div class="input-div">
                <input type="email" class="contact-input" id="email" name="email" placeholder="Email" required />
            </div>
            <div class="input-div">
                <textarea id="message" name="message" placeholder="Message" required></textarea>
            </div>
            <button class="page-btn form-btn" type="submit" form="form1" value="Submit" onclick="ResetContent()">Submit</button>
        </form>
    </div>
    
  
</div>